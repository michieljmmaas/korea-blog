{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "commitMessageSuffix": "[deploy]",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "commitMessageSuffix": "[deploy]",
    "automerge": true
  }
}